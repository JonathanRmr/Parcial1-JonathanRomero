<!DOCTYPE html>
<html lang="en">
    <%- include('./templates/header')%>
    <body>
        <div class="container">
            <header>
            </header>
            <div class="card">
                <div class="card-header">
                    <h1>Adicionar Registro</h1>
                </div>
                <div class="card-body">
                    <form action="/" method="post">
                        <label for="fecha">Fecha</label>
                        <input type="date" id="fecha" name="fecha" required><br>

                        <label for="departamento">Departamento</label>
                        <select id="departamento" name="departamento" required>
                            <% departments.forEach(dep => { %>
                                <option value="<%= dep.code %>"><%= dep.name %></option>
                            <% }) %>
                        </select><br>

                        <label for="municipio">Municipio</label>
                        <select id="municipio" name="municipio" required></select><br>
                        
                        <button type="submit" class="btn btn-secondary">Enviar</button>
                    </form>
                </div>
                <div class="card-footer">Pie de p√°gina</div>
            </div>
            <footer><%- include('./templates/footer')%></footer>
        </div>
        <script>
            const departments = <%- JSON.stringify(departments) %>;
            const towns = <%- JSON.stringify(towns) %>;
            const departmentSelect = document.getElementById('departamento');
            const townSelect = document.getElementById('municipio');

            const populateTowns = (departmentCode) => {
                townSelect.innerHTML = '';
                const filteredTowns = towns.filter(town => town.department === departmentCode);
                filteredTowns.forEach(town => {
                    const option = document.createElement('option');
                    option.value = town.name;
                    option.textContent = town.name;
                    townSelect.appendChild(option);
                });
            };

            departmentSelect.addEventListener('change', (event) => {
                const selectedDepartmentCode = event.target.value;
                populateTowns(selectedDepartmentCode);
            });

            populateTowns(departmentSelect.value);
        </script>
    </body>
</html>
